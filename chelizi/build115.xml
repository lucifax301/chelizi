	<target name="upload-all" depends="upload-authcode, upload-coach, upload-coupon, upload-file, upload-httpaccess, upload-jpush, upload-location, upload-log, upload-logic, upload-order, upload-student,upload-school,upload-pay,upload-payaccess,upload-share">
