<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://www.springframework.org/schema/beans"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="databaseResources" class="java.util.ArrayList">  
     <constructor-arg>  
     <list>  
         <value>classpath:jdbc.properties</value>  
     </list>  
     </constructor-arg>  
 </bean>
 <bean id="databaseProp" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
     <property name="order" value="53" />  
     <property name="ignoreUnresolvablePlaceholders" value="true" />   
     <property name="locations" ref="databaseResources" />  
 </bean> 

<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
<property name="dataSource" ref="dataSource" />
<property name="typeAliasesPackage" value="com.lili.share.dao.po" />
<property name="mapperLocations" value="classpath:com/lili/share/dao/mapper/*.xml" />
</bean>

<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
	<property name="basePackage" value="com.lili.share.dao" />
	<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" />
</bean>

</beans>